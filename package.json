{
  "private": true,
  "name": "theme-ui-next-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Frederick Morin (https://freddydumont.com)",
  "license": "MIT",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "typecheck": "tsc --noEmit --pretty ",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run"
  },
  "dependencies": {
    "@mdx-js/loader": "^1.6.22",
    "@next/mdx": "^11.1.2",
    "@theme-ui/css": "^0.11.3",
    "@theme-ui/presets": "^0.11.2",
    "@theme-ui/style-guide": "^0.11.3",
    "next": "^11.1.2",
    "next-nprogress-emotion": "^2.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "theme-ui": "^0.11.3"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@emotion/jest": "^11.3.0",
    "@testing-library/cypress": "^8.0.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.3",
    "@types/react": "^17.0.27",
    "babel-jest": "^27.2.5",
    "cypress": "^8.5.0",
    "eslint": "^7.32.0",
    "eslint-config-next": "11.1.2",
    "eslint-plugin-cypress": "^2.12.1",
    "husky": "^4.3.8",
    "jest": "^27.2.5",
    "lint-staged": "^11.2.1",
    "prettier": "^2.4.1",
    "typescript": "^4.4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run typecheck && yarn test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "yarn lint --max-warnings 0"
    ],
    "*.{ts,tsx,js,css,json,md,mdx}": [
      "prettier --write",
      "git add"
    ]
  }
}
